
@{
    ViewData["Title"] = "Welcome";
}

<h1>Welcome to this website</h1>

@{ 
    string name = (string)ViewData["name"];
    int numberOfTimes = (int)ViewData["numberOfTimes"];
}

<ul>
    @{ 
        for (int i = 0; i < numberOfTimes; i++)
        {
            <li>Hello @name! </li>
        }
    }
</ul>