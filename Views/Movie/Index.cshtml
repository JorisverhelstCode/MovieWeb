@model IEnumerable<MovieWeb.Models.MovieListViewModel>


<h1>
    All current movies:
</h1>
<table>
    @{
        foreach (var item in Model)
        {
        <tr>
            <td>@item.Title</td>
            <td>
                <a asp-controller="Movie" asp-action="Detail" asp-route-id=@item.ID>Detail</a>
            </td>
        </tr>

        }
    }
</table>

<a asp-controller="Movie" asp-action="Create">Create new movie</a>