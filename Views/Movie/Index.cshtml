@model IEnumerable<MovieWeb.Models.MovieListViewModel>


<h1>
    All current movies:
</h1>
<table>
    @{
        foreach (var item in Model)
        {
        <tr>
            <td>@item.Title</td>
            <td>
                <a asp-controller="Movie" asp-action="Detail" asp-route-id="@item.ID">Detail</a>
            </td>
            <td>
                <a asp-controller="Movie" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
            </td>
            <td>
                <button type="submit" class="btn-danger" onclick="return confirm('Ben je zeker dat je @item.Title wil verwijderen?')">Delete</button>
            </td>
        </tr>

        }
    }
</table>

<a asp-controller="Movie" asp-action="Create">Create new movie</a>